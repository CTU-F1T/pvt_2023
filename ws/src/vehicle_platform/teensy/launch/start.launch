<!--
	Author: Jaroslav KlapÃ¡lek <klapajar@fel.cvut.cz>
	Description: Launch a node to communicate with Teensy board.
	TODO: port to ROS 2
-->
<launch>
	<arg name="port" default="-" doc="Location of a port which the Teensy board is attached to."/>

	<node pkg="rosserial_python" type="serial_node.py" name="teensy" output="screen">
		<param name="port" value="$(arg port)" if="$(eval arg('port') != '-')"/>
		<param name="port" command="$(find roslaunch_udev)/src/get_port.py teensy" unless="$(eval arg('port') != '-')"/>
		<param name="baud" value="115200"/>
	</node>
</launch>
