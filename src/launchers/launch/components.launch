<launch>

	<arg name="run" doc="Name of a component/components delimited by `;`."/>

	<node
		pkg="launchers"
		type="launch_components.py"
		name="$(anon launch_components)"
		output="screen"
		args="$(arg run)"
	/>

</launch>
